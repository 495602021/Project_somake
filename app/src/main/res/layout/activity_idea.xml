<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:orientation="vertical"
    tools:context=".mycenter.IdeaActivity">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="50dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/iv_idea_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/def_btn_return_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="意见反馈"
            android:textSize="22sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"

        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:text="如果有退换货、商品质量问题、投诉等，请拨打银泰网客服电话"
        android:id="@+id/tv_idea_phone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp"
        android:text="请选择你要反馈的问题类型" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#fff"

        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/rb_xingneng"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="性能" />

                <RadioButton
                    android:id="@+id/rb_tiyan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="体验" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_error"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="软件错误" />

                <RadioButton
                    android:id="@+id/rb_qita"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="其他" />
            </LinearLayout>
        </RadioGroup>
        <EditText
            android:gravity="top"
            android:padding="10dp"
            android:layout_margin="10dp"

            android:background="@drawable/edit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="请输入你的意见或建议，完美将不断改进"
            android:id="@+id/et_idea_edittext" />
    </LinearLayout>
    <TextView
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="联系方式"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="2dp"
        android:background="#fff"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"

            android:text="手机号："
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:padding="10dp"
            android:background="@drawable/edit"
            android:hint="请输入手机号"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:id="@+id/et_idea_phone" />
    </LinearLayout>
    <Button
        android:id="@+id/bt_idea"
        android:text="提交"
        android:textSize="25dp"
        android:background="@drawable/edit"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
